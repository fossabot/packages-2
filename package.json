{
    "name": "root",
    "private": true,
    "scripts": {
        "chore:bootstrap": "lerna bootstrap",
        "docs:dev": "vuepress dev ./docs",
        "docs:build": "vuepress build ./docs",
        "ci:bootstrap": "lerna bootstrap --since",
        "ci:build": "lerna run build --since",
        "ci:version": "lerna version --conventional-commits --create-release=github -m \"chore(release): publish\" -y",
        "ci:version:prerelease": "lerna version --conventional-prerelease --conventional-commits --create-release=github -m \"chore(release): publish prerelease\" -y",
        "ci:publish": "lerna publish from-git -y"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{md,json,ts,tsx,js,jsx}": "prettier --write"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@vuepress/plugin-active-header-links": "^1.5.4",
        "@vuepress/plugin-back-to-top": "^1.5.4",
        "@vuepress/plugin-nprogress": "^1.5.4",
        "@vuepress/plugin-pwa": "^1.5.4",
        "husky": "^4.3.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.3.0",
        "prettier": "^2.1.1",
        "vuepress": "^1.5.4"
    }
}
