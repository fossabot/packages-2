{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "jsx": "react",
        "declaration": true,
        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "@components/*": ["components/*"]
        },
        "typeRoots": ["types"]
    },
    "include": ["src"]
}
